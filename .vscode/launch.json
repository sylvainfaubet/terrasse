  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      // "preLaunchTask": "npm: start",
      "url": "http://localhost:4200",
      "runtimeExecutable": "/snap/bin/chromium",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "linux": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/puppeteer/.local-chromium/linux-641577/chrome-linux/chrome",
      },
      "webRoot": "${workspaceFolder}"
    },
  ]
}
